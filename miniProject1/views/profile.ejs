<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>

<body>

    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="flex w-full justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block " href="/logout">Logout</a>
        </div>
        <h3 class="text-3xl mb-5"><span class="font-light">Hello</span>, <%= user.name %>
                <span class="text-sm text-blue-500">
                    <%= user.username%>
                </span>
        </h3>

        <h5 class="mb-5">Create A New Post</h5>

        <form action="/post" method="post">
            <textarea name="content" id=""
                class="outline-none p-3 w-full md:w-1/2 lg:w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
                placeholder="What's on your mind?"></textarea>

            <input class="w-full md:w-40 px-3 py-2 bg-blue-500 block rounded-md mt-2 text-sm" type="submit"
                value="Create New Post">
        </form>

        <div class="posts mt-20 mx-auto max-w-4xl">
            <h3 class="text-zinc-400 mb-5 text-2xl">Your Posts</h3>

            <div class="postcontainer mt-5 space-y-4">
                <% user.posts.reverse().forEach(function(post){ %>

                    <div class="post mb-4 p-4 rounded-md border-[1px] bg-zinc-800 border-zinc-700">
                        <h4 class="text-blue-500 mb-2">@<%=user.username %>
                        </h4>
                        <p class="text-sm tracking-tight">
                            <%= post.content %>
                        </p>

                        <small class="mt-2 inline-block">
                            <%= post.likes.length %>
                        </small>

                        <div class="btns flex mt-1 gap-4">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%= post._id %>">edit</a>
                        </div>
                    </div>

                    <% }) %>

            </div>
        </div>

    </div>

</body>

</html>